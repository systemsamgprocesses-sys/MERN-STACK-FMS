{
  "name": "task-management-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite --host",
    "server": "nodemon ./server/index.js",
    "build": "vite build",
    "build:prod": "cross-env NODE_ENV=production VITE_BACKEND_URL=https://hub.amgrealty.in vite build",
    "build:win": "set NODE_ENV=production&& set VITE_BACKEND_URL=https://hub.amgrealty.in&& vite build",
    "start": "node ./server/index.js",
    "start:prod": "cross-env NODE_ENV=production node ./server/index.js",
    "deploy": "npm run build:prod && npm run start:prod",
    "preview": "vite preview",
    "seed-users": "node ./server/utils/seedUsers.js",
    "update-phone-numbers": "node ./server/utils/updateUserPhoneNumbers.js",
    "import-tasks": "node ./server/utils/importTasks.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "googleapis": "^150.0.1",
    "lucide-react": "^0.344.0",
    "mermaid": "^11.12.1",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.10",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.8.1",
    "react-toastify": "^11.0.5",
    "recharts": "^2.12.7",
    "sweetalert2": "^11.22.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^10.1.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
